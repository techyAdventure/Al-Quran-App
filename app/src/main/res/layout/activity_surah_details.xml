<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SurahDetailsActivity"
    android:background="@color/surah_bg">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/blue_quran">

            <TextView
                android:id="@+id/surah_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:fontFamily="cursive"
                android:text="Al-Fatiha"
                android:textAlignment="textStart"
                android:textColor="@color/surah_name"
                android:textSize="26sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/translation"
                android:text="The Opening"
                android:layout_marginEnd="20dp"
                android:textColor="@color/surah_name"
                android:textAlignment="textEnd"
                android:layout_marginTop="5dp"
                android:fontFamily="cursive"
                android:textSize="18sp"
                android:layout_below="@+id/surah_name"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/type"
                android:text="Meccan 7 Ayah"
                android:layout_marginEnd="20dp"
                android:textColor="@color/surah_name"
                android:textAlignment="textEnd"
                android:layout_marginTop="2dp"
                android:fontFamily="cursive"
                android:textSize="13sp"
                android:layout_below="@+id/translation"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/card_view"
        android:layout_margin="10dp"
        android:id="@+id/linear"
>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/search"
            android:layout_height="wrap_content"
            android:background="@drawable/search_bg"
            android:padding="12dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_search_24">

        </EditText>
        <ImageButton
            android:id="@+id/settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:layout_gravity="center"
            android:src="@drawable/ic_settings">

        </ImageButton>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/surah_detail_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/linear"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/play"
            android:background="@null"
            android:src="@drawable/ic_baseline_play_circle_filled_24">

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>



</RelativeLayout>